<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners"
    android:orientation="vertical"
    android:padding="12dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/delegate_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile_placeholder"/>
    <ImageButton
        android:id="@+id/user_verification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_verification_badge"
        android:layout_toRightOf="@id/delegate_image"
        android:layout_marginLeft="-30dp"/>
    <TextView
        android:layout_margin="16dp"
        android:id="@+id/notification_body"
        android:layout_toRightOf="@id/delegate_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المندوب المندوبب في طريقه اليك الان لاستلام شحنتك الشحنة"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <!--        android:text="Name want to deliver your package Order for Offer "-->




</RelativeLayout>