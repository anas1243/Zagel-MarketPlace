<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Rate deliveryman"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
             />

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/rb_rating_diglog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/rating_label"
            android:layout_centerHorizontal="true"
            app:srb_borderColor="@color/colorSecondary"
            app:srb_fillColor="@color/colorSecondary"
            app:srb_isIndicator="false"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_starBorderWidth="2"
            app:srb_starCornerRadius="4"
            app:srb_starSize="50dp"
            app:srb_stepSize="1" />

        <TextView
            android:id="@+id/review_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Review deliveryman"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_below="@id/rb_rating_diglog"
            />

        <EditText
            android:id="@+id/process_review"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="start"
            android:hint="نحن هنا لسماع رأيكم في الخدمة او ارسال اي تعليق"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/review_label"/>

        <Button
            android:id="@+id/btn_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button"
            android:text="Done"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:layout_below="@id/process_review" />


    </RelativeLayout>

</android.support.v7.widget.CardView>